<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kelas"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/iv_class_info"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="6dp"
        app:srcCompat="@drawable/ic_resource_class"
        app:layout_constraintTop_toBottomOf="@id/tv_class"
        app:layout_constraintStart_toStartOf="@id/tv_class"
        app:layout_constraintEnd_toEndOf="@id/tv_class"/>

    <TextView
        android:id="@+id/tv_class_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_class_info"
        app:layout_constraintStart_toStartOf="@id/iv_class_info"
        app:layout_constraintEnd_toEndOf="@id/iv_class_info"
        android:text="0"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>